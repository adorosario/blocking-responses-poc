# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini
JUDGE_MODEL=gpt-4o-mini

# Logging Configuration
LOG_LEVEL=INFO

# Security & Performance Settings
DELAY_TOKENS=20
DELAY_MS=50
RISK_THRESHOLD=1.0
JUDGE_THRESHOLD=0.8
ENABLE_JUDGE=true
PRESIDIO_CONFIDENCE_THRESHOLD=0.85

# Analysis Performance Settings
ANALYSIS_WINDOW_SIZE=200
ANALYSIS_OVERLAP=50
ANALYSIS_FREQUENCY=100

# Compliance Features
ENABLE_SAFE_REWRITE=true
ENABLE_AUDIT_LOGGING=true
HASH_SENSITIVE_DATA=true
AUDIT_RETENTION_DAYS=30
REWRITE_TEMPERATURE=0.2

# Performance Tuning (Advanced)
SSE_QUEUE_MAXSIZE=200
HEARTBEAT_INTERVAL=15
METRICS_DEQUE_SIZE=1000
ANALYSIS_HISTORY_LIMIT=10
MAX_WINDOW_TEXT_CHARS=8000
BUFFER_ANALYSIS_FREQUENCY=50

# CORS Configuration (use * for all origins, or comma-separated list)
CORS_ORIGINS=*